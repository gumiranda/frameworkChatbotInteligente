        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/textview2"
        android:descendantFocusability="afterDescendants">

      <!--
        <ImageView
            android:id="@+id/image"
